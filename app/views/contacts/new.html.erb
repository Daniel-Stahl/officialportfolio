<main>
  <div class="container">
    <h1>Contact Form</h1>
    <p>Send me a message and I will get back to you shortly.</p>

    <%= form_for @contact do |f| %>
      <%= f.label :name%><br>
      <%= f.text_field :name, required: true %>

      <br>

      <%= f.label :emai%><br>
      <%= f.email_field :email, required: true %>

      <br>

      <%= f.label :message%><br>
      <%= f.text_area :message, as: :text %>

      <div class="hidden">
        <%= f.label :nickname%><br>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <%= f.submit 'Send Message', class: "btn" %>
    <% end -%>
  </div>
</main>